<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg_newgame"
    android:layout_height="100dp"
    android:orientation="vertical"
    android:padding="15dp">

    <ImageView
        android:layout_marginRight="5dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/img_newserver"
        android:layout_width="70dp"
        android:layout_height="70dp" />

    <TextView
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:text="title"
        android:layout_toRightOf="@id/img_newserver"
        android:id="@+id/title_newserver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="3dp"
        android:textSize="12sp"
        android:text="title"
        android:layout_toRightOf="@id/img_newserver"
        android:id="@+id/desc_newserver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_alignBottom="@+id/img_newserver"
        android:layout_marginTop="3dp"
        android:textSize="14sp"
        android:text="title"
        android:layout_toRightOf="@id/img_newserver"
        android:id="@+id/data_newserver"

        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>