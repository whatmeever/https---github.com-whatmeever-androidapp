<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:background="#FFF"
        android:id="@+id/vp_netgame"
        android:layout_width="match_parent"
        android:layout_height="135dp" />

    <LinearLayout
        android:layout_below="@+id/vp_netgame"
        android:background="@drawable/bg_newgame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp">

        <LinearLayout
android:padding="5dp"
            android:id="@+id/lin1_item_netgame"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView

                android:id="@+id/img1_item_lin1_game"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/text1_item_lin1_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="礼包" />

        </LinearLayout>
        <LinearLayout
            android:padding="5dp"
            android:id="@+id/lin2_item_netgame"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img2_item_lin2_game"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/text2_item_lin2_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="礼包" />

        </LinearLayout>
        <LinearLayout
            android:padding="5dp"
            android:id="@+id/lin3_item_netgame"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img3_item_lin3_game"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/text3_item_lin3_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="礼包" />

        </LinearLayout>
        <LinearLayout
            android:padding="5dp"
            android:id="@+id/lin4_item_netgame"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img4_item_lin4_game"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/text4_item_lin4_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="礼包" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="120dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_marginRight="5dp"
            android:id="@+id/cycle1_netgame"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/bg_cycle_big" />

        <TextView
            android:layout_marginRight="5dp"
            android:id="@+id/cycle2_netgame"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/bg_cycle_little" />

        <TextView
            android:layout_marginRight="5dp"
            android:id="@+id/cycle3_netgame"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/bg_cycle_little" />

    </LinearLayout>

</RelativeLayout>
