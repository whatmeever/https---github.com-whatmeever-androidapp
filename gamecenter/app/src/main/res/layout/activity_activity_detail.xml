<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.waterfairy.gamecenter.activitys.ActivityDetail">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_bar">

        <ImageView
            android:id="@+id/back_activity_detail"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:padding="15dp"
            android:src="@mipmap/game_btn_title_back_normal" />

        <TextView
            android:id="@+id/title_activity_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/search_activity_detail"
            android:layout_toRightOf="@id/back_activity_detail"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#3B3939"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/search_activity_detail"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:padding="15dp"
            android:src="@mipmap/game_search_btn_normal" />
    </RelativeLayout>

    <ScrollView
        android:layout_marginTop="50dp"
        android:background="#FFF"
        android:id="@+id/scrollView_activity_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView

                android:id="@+id/image_activity_detail"
                android:layout_width="match_parent"
                android:layout_height="150dp" />

            <WebView
                android:background="#FFF"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"

                android:id="@+id/webview_activity_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </ScrollView>
