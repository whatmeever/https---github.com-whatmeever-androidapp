<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Relative"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rll"
        android:layout_height="match_parent">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/iv_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/iv_guan"
        android:layout_toRightOf="@+id/iv_icon"
        android:layout_marginTop="10dp"
        android:layout_height="30dp"
        android:src="@mipmap/game_top_no1"
        android:textSize="20dp"
        android:textColor="#000"
        android:gravity="center_vertical"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/tv_name"
        android:layout_toRightOf="@+id/iv_guan"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="70dp"
        android:singleLine="true"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/rl"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/iv_icon"
        android:layout_below="@+id/iv_guan"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/game_detail_comment_star_full"
            android:id="@+id/iv1"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/iv1"
            android:src="@mipmap/game_detail_comment_star_full"
            android:id="@+id/iv2"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/iv2"
            android:src="@mipmap/game_detail_comment_star_full"
            android:id="@+id/iv3"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/iv3"
            android:src="@mipmap/game_detail_comment_star_full"
            android:id="@+id/iv4"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/iv4"
            android:src="@mipmap/game_detail_comment_star_full"
            android:id="@+id/iv5"
            />

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/rl"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_download"
        android:layout_toRightOf="@+id/iv_icon"
        android:layout_marginLeft="5dp"
        android:textColor="#FCD103"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/rl"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_type"
        android:layout_toRightOf="@+id/tv_download"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/rl"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_size"
        android:layout_toRightOf="@+id/tv_type"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/rank"
        android:id="@+id/ll"
        android:layout_below="@+id/iv_icon"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="2dp"
        android:orientation="horizontal"
        android:layout_height="30dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_marginTop="1dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:text="游戏介绍"
                android:onClick="onClick"
                android:gravity="center"
                android:id="@+id/tv1"
                android:background="#E6DE69"
                />
        </LinearLayout>
        <TextView
            android:layout_width="2dp"
            android:layout_height="30dp"
            android:background="#E6DE69"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_marginTop="1dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:id="@+id/rl_comment"
                android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评论"
                android:clickable="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/tv2"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_number"
                    android:layout_toRightOf="@+id/tv2"
                    android:text="qqq"
                    android:textSize="10dp"
                    android:layout_alignBottom="@+id/tv2"
                    />
                    </RelativeLayout>
                </LinearLayout>

        </LinearLayout>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ll"
        android:layout_height="match_parent"
        android:id="@+id/viewpager"
        android:layout_above="@+id/ll_butoom"
        />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:id="@+id/ll_butoom"
            android:layout_alignParentBottom="true"
            android:background="#E0E0E0"
            android:layout_height="40dp">
            <Button
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:text="下载"
                android:textColor="#fff"
                android:background="@drawable/runk_btn"
                android:textSize="20dp"
                android:id="@+id/bt_download"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/iv_anim"
        android:background="#fff"
        android:layout_centerInParent="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv"
        android:layout_below="@+id/iv_anim"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:id="@+id/maxView"
        />
</RelativeLayout>